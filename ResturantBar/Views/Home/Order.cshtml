
<p>Neighborhood SushiBar</p>
<a href="#"data-toggle="modal" data-target="#myModal" >order for delivery</a>



<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content" ng-controller="Order-controller">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Place your order</h4>
            </div>
            <div class="modal-body">

                <div class="form" style="height: 80%;">

                    <div class="form-group">
                        <input type="text" class="form-control input-md" name="food" id="food" ng-model="Foods" placeholder="Which Foods? Ex: Soup(1) , Mochi(2)">
                    </div>
                        <div class="form-group">
                            <input type="text" class="form-control input-md" name="name" id="name" ng-model="Name" placeholder="Name">
                        </div>
                    <div class="form-group">
                        <input type="text" class="form-control input-md" name="mobileNo" id="mobileNo" ng-model="MobileNumber" placeholder="Mobile Number">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control input-md" name="address" id="address" ng-model="Address" placeholder="Delivery address">
                    </div>
   
                       
                    <button type="button" class="btn btn-block" ng-click="save()">Place order</button>
                </div>
               
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

