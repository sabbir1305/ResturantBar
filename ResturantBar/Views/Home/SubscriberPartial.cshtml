
@{
    Layout = null;
}
<div class="row" ng-controller="Subscribe-controller">
    <div class="col-sm-6 form wow rotateIn" data-wow-duration="2s" data-wow-delay="1s">
        <h3>Emailing List:</h3>
        <p>stay in touch and learn what's going on at your neighborhood sushibar!!!Events,specials and more</p>
        <form>
            <div class="form-group">
                <input type="text" class="form-control input-lg" name="name" id="name" ng-model="FirstName" placeholder="First Name">
            </div>
            <div class="form-group">
                <input type="text" class="form-control input-lg" name="lastname" id="lastname" ng-model="LastName" placeholder="Last Name">
            </div>
            <div class="form-group">
                <input type="email" class="form-control input-lg" name="email" id="email" ng-model="Email" placeholder="Email">
            </div>
            <h3>Locations:</h3>
            <div class="checkbox">
            <select ng-model="Location" class="form-control">
                <option value="">-- Select location --</option>
                <option value="Downtown">Downtown</option>
                <option value="Suburbs">Suburbs</option>
                <option value="Local">Local</option>
            </select>
            </div> <br />
            <button type="button" class="btn btn-block" ng-click="save()">Subscriber</button>
        </form>
    </div>


    <div class="col-sm-6 text-center iframe wow flipInY" data-wow-duration="2s" data-wow-delay="1s">
        <h1>We are here</h1>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d29200.586062015547!2d90.41349581456318!3d23.815993884557066!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3755c7a0b243fb49%3A0x4688b8e37410e9a1!2sSamdado+Japanese+Cuisine!5e0!3m2!1sbn!2sbd!4v1504859153500"
                width="100%" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
        <h1>Don't drink and drive</h1>
    </div>
</div>
